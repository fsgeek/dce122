  /Xpos where {pop Xpos} {0} ifelse
  /Ypos where {pop Ypos} {0} ifelse
  SetCurrentPoint
  RestoreDviLaserPage
  moveto
  /Ypos xdef
  /Xpos xdef
} bdef
 
